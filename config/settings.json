// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent": {
    "button": false
  },
  "tabs": {
    "git_status": true
  },
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "project_panel": {
    "indent_guides": {
      "show": "never"
    },
    "starts_open": false,
    "button": false
  },
  "git_panel": {
    "button": false
  },
  "outline_panel": {
    "indent_guides": {
      "show": "never"
    },
    "dock": "right",
    "button": false
  },
  "collaboration_panel": {
    "button": false,
  },
  "notification_panel": {
    "button": false
  },
  "diagnostics": {
    "button": true
  },
  "debugger": {
    "button": false
  },
  "search": {
    "button": false
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "format_on_save": "off",
  "indent_guides": {
    "enabled": false
  },
  "toolbar": {
    "quick_actions": false
  },
  "minimap": {
    "max_width_columns": 80,
    "show": "auto"
  },
  "on_last_window_closed": "quit_app",
  "terminal": {
    "default_height": 640.0,
    "button": false,
    "shell": {
      "program": "/usr/bin/fish"
    }
  },
  "ui_font_family": "CPMono_v07",
  "buffer_font_family": "CPMono_v07",
  "relative_line_numbers": "enabled",
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "on_yank"
  },
  "ui_font_size": 14.0,
  "buffer_font_size": 14.0,
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Fisa"
  }
}
